{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "prettier",
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-scoped-var": 2,
    "brace-style": [
      2,
      "1tbs"
    ],
    "camelcase": 0,
    "computed-property-spacing": [
      2,
      "never"
    ],
    "curly": 0,
    "eol-last": 2,
    "eqeqeq": [
      2,
      "smart"
    ],
    "max-depth": [
      1,
      6
    ],
    "max-len": [
      1,
      500
    ],
    "max-statements": [
      1,
      200
    ],
    "no-undef": "error",
    "new-cap": 0,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": "error",
    "no-unused-vars": "error",
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "quotes": [
      2,
      "double",
      "avoid-escape"
    ],
    "semi": [
      2,
      "always"
    ],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "space-unary-ops": 2,
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-infix-ops": "error",
    "space-before-blocks": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-empty": [
      "error"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "block-like",
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": "block-like"
      }
    ],
    "dot-notation": "error",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-useless-constructor": "off",
    "@typescript-eslint/camelcase": "off",
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/explicit-module-boundary-types": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
