root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js, **/*.js, *.ts, **/*.ts]
indent_size = 2
indent_style = space

[*.yml, **/*.yml, *.yaml, **/*.yaml]
indent_size = 2
indent_style = space

[{package.json}, {.eslintrc}]
indent_size = 4
indent_style = space
